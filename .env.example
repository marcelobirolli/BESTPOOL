# BESTPOOL Environment Configuration

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Solana Configuration
EXPO_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
EXPO_PUBLIC_SOLANA_CLUSTER=mainnet-beta

# ORCA DEX Configuration
EXPO_PUBLIC_ORCA_API_URL=https://api.orca.so
ORCA_API_KEY=your_orca_api_key_if_required

# External Data Providers
MACRO_DATA_API_KEY=your_macro_data_provider_key
VOLATILITY_API_KEY=your_volatility_data_provider_key
ONCHAIN_DATA_API_KEY=your_onchain_data_provider_key

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# Phantom Wallet Configuration
EXPO_PUBLIC_PHANTOM_APP_URL=https://phantom.app

# Push Notifications
EXPO_PUSH_TOKEN=your_expo_push_token

# Development Configuration
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000

# Production Configuration (uncomment for production)
# EXPO_PUBLIC_ENVIRONMENT=production
# EXPO_PUBLIC_DEBUG_MODE=false
# EXPO_PUBLIC_API_BASE_URL=https://your-vps-domain.com

# Security
